have() {
	command -v "$1" >/dev/null
}

# Process X resources
find ~/etc/X/resource/ -type f -exec sh -c \
	'sed -r "s/[ \t]*([A-Za-z0-9_]+)[ \t]*:/$(basename ''{}'').\1:/" ''{}''' \; \
	| xrdb

# rxvt-unicode daemon
have urxvtd &&
	urxvtd -o -f

# SSH agent
have ssh-agent &&
	eval "$(ssh-agent)"

# GnuPG agent
have gpg-agent &&
	eval "$(gpg-agent --daemon)"

exec i3
