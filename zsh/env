eval "$(dircolors)"

export BROWSER="chromium-browser:firefox"
export EDITOR="vim"
export MANSECT="3p:3:2:1p:1:8:4:5:6:7:9:0p"

# Locale
export LANG="en_GB.UTF-8"
export LC_TIME="en_DK.UTF-8"
export LANGUAGE="en_GB:en"

if { have clang } {
	export CC="clang"
}

if { have clang++ } {
	export CXX="clang++"
}

if [[ -d ~/bin ]] {
	path+=( ~/bin )
}
