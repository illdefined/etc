general {
	colors = true
	interval = 5
}

order += "ipv6"
order += "ethernet _first_"
order += "wireless _first_"
order += "volume master"
order += "disk /"
order += "battery 0"
order += "cpu_temperature 0"
order += "load"
order += "time"

ipv6 {
	format_up = " %ip "
	format_down = " no IPv6 "
}

ethernet _first_ {
	format_up = "ﾠ🖧ﾠ%ip (%speed) "
	format_down = "ﾠ🖧ﾠdisconnected "
}

wireless _first_ {
	format_up = "ﾠ📶ﾠ%ip (‘%essid’, %frequency, %quality) "
	format_down = "ﾠ📶ﾠdisconnected "
}

volume master {
	device = "pulse"
	format = "ﾠ🔊ﾠ%volume "
	format_muted = "ﾠ🔇ﾠ%volume "
}

disk "/" {
	format = "ﾠ🗁ﾠ%avail "
	low_threshold = 5
}

battery 0 {
	format = "ﾠ%statusﾠ%percentage %remaining %consumption "
	status_chr = "🔌"
	status_bat = "🔋"
	status_unk = "🔋"
	status_full = "🔌"
}

battery 1 {
	format = "ﾠ%statusﾠ%percentage %remaining %consumption "
	status_chr = "🔌"
	status_bat = "🔋"
	status_unk = "🔋"
	status_full = "🔌"
}

cpu_temperature 0 {
	format = "ﾠ🌡ﾠ%degrees °C "
}

load {
	format = "ﾠ🗠ﾠ%1min "
	max_threshold = 4
}

time {
	format = " %Y-%m-%d %H:%M %Z "
}
