general {
	colors = true
	interval = 5
}

order += "ipv6"
order += "ethernet br0"
order += "ethernet eno1"
order += "ethernet eno2"
order += "volume master"
order += "disk /"
order += "cpu_temperature 1"
order += "load"
order += "time"

ipv6 {
	format_up = " %ip "
	format_down = " no IPv6 "
}

ethernet br0 {
	format_up = "ﾠ🖧ﾠ%ip "
	format_down = "ﾠ🖧ﾠdisconnected "
}

ethernet eno1 {
	format_up = "ﾠ🖧ﾠ%speed "
	format_down = "ﾠ🖧ﾠdisconnected "
}

ethernet eno2 {
	format_up = "ﾠ🖧ﾠ%speed "
	format_down = "ﾠ🖧ﾠdisconnected "
}

volume master {
	device = "pulse:1"
	format = "ﾠ🔊ﾠ%volume "
	format_muted = "ﾠ🔇ﾠ%volume "
}

disk "/" {
	format = "ﾠ🗁ﾠ%avail "
	low_threshold = 5
}

cpu_temperature 1 {
	format = "ﾠ🌡ﾠ%degrees °C "
}

load {
	format = "ﾠ🗠ﾠ%1min "
	max_threshold = 4
}

time {
	format = " %Y-%m-%d %H:%M %Z "
}
